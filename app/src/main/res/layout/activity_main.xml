<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_centerHorizontal="true"
        android:text="The computer only considers a number from 1 to 9999"
        android:textSize="20sp"
        />
    <ImageView
        android:id="@+id/high_no"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/high_gray"
        android:layout_below="@id/tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/high_yes"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/high_pink"
        android:layout_below="@id/tip"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        />
    <EditText
        android:id="@+id/guess_num"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/high_no"
        android:textSize="40sp"
        android:gravity="center_horizontal"
      />
<!--    <TextView-->
<!--        android:id="@+id/tip"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_centerHorizontal="true"-->
<!--        android:layout_below="@id/guess_num"-->
<!--        android:layout_marginTop="50dp"-->
<!--        android:text="@string/tip_string"-->
<!--        android:gravity="center_horizontal"-->
<!--        android:textSize="30sp"-->
<!--        />-->
    <ImageView
        android:id="@+id/low_no"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/low_gray"
        android:layout_below="@id/guess_num"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60sp"
        />
    <ImageView
        android:id="@+id/low_yes"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/low_pink"
        android:layout_below="@id/guess_num"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60sp"
        android:visibility="invisible"
        />
    <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/btn_check"
        android:text="check"
        android:textColor="@color/colorWhite"
        android:textSize="35sp"
        />

    <ImageView
        android:id="@+id/yes_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@id/check"
        android:layout_centerHorizontal="true"
        android:src="@drawable/yes"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/no_icon"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignBottom="@id/check"
        android:layout_centerHorizontal="true"
        android:src="@drawable/no"
        android:visibility="invisible"/>
</RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>